{
  "name": "parasut-node-sdk-mcp",
  "version": "1.0.0",
  "description": "Unofficial TypeScript SDK and MCP Server for Paraşüt API - Turkish accounting and e-invoicing",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:sdk": "npm run build --workspace=@yigitkonur/parasut-node-sdk",
    "build:mcp": "npm run build --workspace=@yigitkonur/parasut-mcp-server",
    "typecheck": "npm run typecheck --workspaces",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean": "rm -rf packages/*/dist packages/*/node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yigitkonur/parasut-node-sdk-mcp.git"
  },
  "keywords": [
    "parasut",
    "paraşüt",
    "sdk",
    "mcp",
    "typescript",
    "e-fatura",
    "e-invoice",
    "turkey",
    "accounting",
    "api"
  ],
  "author": "Yigit Konur <yigit@konur.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yigitkonur/parasut-node-sdk-mcp/issues"
  },
  "homepage": "https://github.com/yigitkonur/parasut-node-sdk-mcp#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}
